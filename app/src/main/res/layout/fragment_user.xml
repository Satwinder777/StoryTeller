<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context="com.example.fragments.UserFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/pt_serif_regular"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:text="My Profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:strokeWidth="4dp"
                    android:layout_marginVertical="5dp"
                    app:strokeColor="@color/blue"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="60dp"
                        app:strokeColor="@color/white"
                        android:elevation="6dp"
                        android:layout_margin="2dp"




                        app:strokeWidth="4dp"
                        app:cardCornerRadius="30dp"

                        android:layout_height="60dp" >
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"
                            android:src="@drawable/girl12" />
                    </com.google.android.material.card.MaterialCardView>


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/pt_serif_regular"
                    android:text="Mr.Richard" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="30dp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="4dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/blue"
                    app:strokeColor="@color/blue"
                    android:layout_height="30dp" >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="7" />
                    </com.google.android.material.card.MaterialCardView>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:lines="1"
                    android:fontFamily="@font/pt_serif_regular"
                    android:text="Stories" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/inspiredCard"
                    android:layout_width="30dp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="4dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/blue"
                    app:strokeColor="@color/blue"
                    android:layout_height="30dp" >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="73" />
                </com.google.android.material.card.MaterialCardView>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:fontFamily="@font/pt_serif_regular"
                    android:textAlignment="center"
                    android:text="Inspired" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/myprofilecard"
                    android:layout_width="30dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center"
                    app:strokeWidth="4dp"
                    app:cardBackgroundColor="@color/blue"
                    app:strokeColor="@color/blue"
                    android:layout_height="30dp" >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="7" />
                </com.google.android.material.card.MaterialCardView>




                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:lines="1"
                    android:fontFamily="@font/pt_serif_regular"
                    android:layout_height="wrap_content"
                    android:text="Inspiration" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:lines="3"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pt_serif_regular"
            android:layout_height="wrap_content"
            android:text="@string/lin1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginVertical="10dp"
            android:textColor="#E31414"
            android:textAlignment="center"
            android:fontFamily="@font/pt_serif_regular"
            android:text="Your Profile is Under Review " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/brown"
             />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/myprofileitem"
            />





    </LinearLayout>
</FrameLayout>