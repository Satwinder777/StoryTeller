<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="30dp"
                app:strokeColor="@color/blue"
                app:strokeWidth="4dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:elevation="6dp"


                    app:cardCornerRadius="30dp"
                    app:strokeColor="@color/white"

                    app:strokeWidth="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/girl12" />
                </com.google.android.material.card.MaterialCardView>


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/pt_serif_regular"
                android:lines="1"
                android:maxEms="9"
                android:text="Mrs.Richard"

                android:textAlignment="center"
                android:textColor="@color/black"
                tools:ignore="RtlCompat" />


            <ImageView
                android:id="@+id/checkImgItem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/check" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardApproved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                app:strokeColor="@color/blue"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/pt_serif_regular"
                    android:text="Approved"
                    android:textColor="@color/blue" />

            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/inspiredcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:visibility="invisible"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/blue"
                    app:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/inspiretext"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/pt_serif_regular"
                        android:text="+ Inspired"
                        android:textColor="@color/blue" />

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <ImageView
                    android:id="@+id/moreImg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:src="@drawable/baseline_more_vert_24"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/pt_serif_regular"
            android:text="Mrs.Richard" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pt_serif_regular"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/pt_serif_regular"
            android:text="#fodies" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/parentrc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item8" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/childrc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item7" />

        <LinearLayout
            android:id="@+id/linearLayoutIconCSA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/commentbtn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_mode_comment_24" />

            <ImageView
                android:id="@+id/sharebtn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/baseline_share_24" />

            <ImageView
                android:id="@+id/aboutbtn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/about" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical"
            tools:listitem="@layout/comment_adapter_item" />



    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commentSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="19dp"
                app:strokeColor="@color/brown"
                app:strokeWidth="3dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/girl2" />

            </com.google.android.material.card.MaterialCardView>

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="Add a Comment..."
                android:textColorHint="#CFBDBD"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/addComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/send_png" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/lineHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B0B5B5"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>