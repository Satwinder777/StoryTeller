<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:strokeColor="@color/blue"
                app:strokeWidth="5dp"
                app:cardCornerRadius="20dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/girl12"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:layout_gravity="top"
                android:maxEms="9"

                android:fontFamily="@font/pt_serif_regular"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="Mrs.Richard"
                tools:ignore="RtlCompat" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/inspiredcard"
                android:layout_width="wrap_content"
                app:strokeWidth="1dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_vertical"
                app:strokeColor="@color/blue"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                >

                <TextView
                    android:id="@+id/inspiretext"
                    android:fontFamily="@font/pt_serif_regular"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textColor="@color/blue"
                     android:text="+ Inspired"
                    />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_serif_regular"
            android:layout_marginVertical="8dp"
            android:text="Mrs.Richard"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pt_serif_regular"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/pt_serif_regular"
            android:text="#fodies"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/parentrc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item8"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/childrc"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item7"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/commentbtn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_mode_comment_24"
                 />
            <ImageView
                android:id="@+id/sharebtn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/baseline_share_24"
                />
            <ImageView
                android:id="@+id/aboutbtn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/about"
                 />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B0B5B5"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>